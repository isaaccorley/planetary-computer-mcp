{
  "name": "planetary-computer-mcp",
  "version": "0.1.0",
  "description": "MCP server for querying Microsoft Planetary Computer STAC catalog",
  "type": "module",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "bin": {
    "planetary-computer-mcp": "dist/src/index.js"
  },
  "engines": {
    "node": ">=18",
    "bun": ">=1.0.0"
  },
  "scripts": {
    "build": "bunx tsc && echo 'Build complete: dist/src/index.js'",
    "watch": "bunx tsc --watch",
    "prepare": "husky",
    "prepublishOnly": "bun run build",
    "typecheck": "bunx tsc --noEmit",
    "dev": "bun run src/index.ts",
    "mcp": "bun run src/index.ts",
    "lint": "bunx eslint . --ext .ts,.tsx",
    "format": "bunx prettier --write .",
    "test": "bun test",
    "check:prettier": "bunx prettier --check .",
    "check": "bun run typecheck && bun run check:prettier && bun run lint && bun test",
    "semantic-release": "semantic-release",
    "test:cog": "bun run test/test-cog.ts",
    "test:zarr": "bun run test/test-zarr.ts",
    "test:vector": "bun run test/test-ms-buildings.ts",
    "test:modis": "bun run test/test-cog-modis.ts",
    "test:optical": "bun run test/test-cog-optical.ts",
    "test:naip": "bun run test/test-cog-naip.ts",
    "test:dem": "bun run test/test-cog-dem.ts",
    "test:lulc": "bun run test/test-cog-lulc.ts",
    "test:daymet": "bun run test/test-daymet-na.ts",
    "test:integration": "bun run test:cog && bun run test:zarr && bun run test:vector && bun run test:modis && bun run test:optical && bun run test:naip && bun run test:dem && bun run test:lulc && bun run test:daymet"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "stac",
    "planetary-computer",
    "geospatial",
    "satellite",
    "sentinel",
    "landsat",
    "earth-observation",
    "remote-sensing",
    "gis"
  ],
  "author": "Isaac Corley <isaac.corley@proton.me>",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/isaaccorley/planetary-computer-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/isaaccorley/planetary-computer-mcp/issues"
  },
  "homepage": "https://github.com/isaaccorley/planetary-computer-mcp#readme",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@duckdb/node-api": "^1.4.3-r.1",
    "@modelcontextprotocol/sdk": "^1.0.4",
    "geotiff": "^2.1.3",
    "proj4": "^2.20.2",
    "sharp": "^0.34.5",
    "zarrita": "^0.5.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.14.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/node": "^22.10.1",
    "@types/proj4": "^2.5.6",
    "typescript-eslint": "^8.50.1",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "bun-types": "^1.3.5",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "semantic-release": "^24.2.0",
    "typescript": "^5.7.2"
  },
  "lint-staged": {
    "*.+(ts|tsx|js|jsx|mjs|cjs)": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*.{json,md,css,scss,yml,yaml}": [
      "prettier --write",
      "git add"
    ]
  },
  "packageManager": "bun@1.3.5"
}
