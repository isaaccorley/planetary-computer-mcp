{
  "name": "planetary-computer-mcp-vscode",
  "displayName": "Planetary Computer MCP",
  "description": "VS Code extension to configure the Planetary Computer MCP server for GitHub Copilot",
  "version": "0.2.0",
  "engines": {
    "vscode": "^1.60.0"
  },
  "publisher": "isaaccorley",
  "icon": "assets/icon.png",
  "main": "./dist/extension.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/isaaccorley/planetary-computer-mcp.git"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "planetary-computer.add",
        "title": "Planetary Computer: Add MCP Server"
      },
      {
        "command": "planetary-computer.remove",
        "title": "Planetary Computer: Remove MCP Server"
      },
      {
        "command": "planetary-computer.status",
        "title": "Planetary Computer: Check MCP Status"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -p ./ -w",
    "prepack": "bun run compile",
    "package": "bunx @vscode/vsce package",
    "publish": "bunx @vscode/vsce publish --pat $VSCE_TOKEN"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "typescript": "^5.0.0",
    "@types/vscode": "^1.60.0",
    "@vscode/vsce": "^3.7.1"
  },
  "dependencies": {}
}
